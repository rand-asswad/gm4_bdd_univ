#!/usr/bin/bash

# run command
if [ $1 ]; then
    ERROR=`cat db/insert/*.sql | mysql -u $1 2>&1`
else
    ERROR=`cat db/insert/*.sql | mysql 2>&1`
fi

# check for errors
if [[ ${ERROR} ]]; then
    ErrCode=`echo ${ERROR} | cut -d " " -f2`
    if [ $ErrCode -eq 1045 ]; then
        echo "Argument USER expected."
        echo "Usage: create_tables USER"
    else
        echo ${ERROR}
    fi
    exit 1
fi
